<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99CCFF"
    tools:context=".write.Write4Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/study1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_img"
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/user" />

            <ImageView
                android:id="@+id/post_img_upload_button"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/imagebutton"/>

            <EditText
                android:id="@+id/post_title"
                android:layout_width="249dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:hint=" 제목을 입력해주세요"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="360dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="#A6A6A6">

            <LinearLayout
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#FFFFFF">

                <EditText
                    android:id="@+id/post_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="top"
                    android:background="#FFFFFF"
                    android:hint="공모전 및 스터디 활동 개요를 작성해주세요"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/post_upload_button"
            android:layout_gravity="center"
            android:layout_width="360dp"
            android:background="#B3D4F4"
            android:layout_height="wrap_content"
            android:text="POST UPLOAD"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>